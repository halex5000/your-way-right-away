model Dashboard {
  id      String  @id @default(cuid())
  key     String  @unique
  name    String
  gizmos  Gizmo[]
}

model Gizmo {
  id            String        @id @default(cuid())
  xCoordinate   Int
  yCoordinate   Int
  width         Int
  height        Int
  title         String        @default("title")
  contentId     Json
  dashboard     Dashboard?    @relation(fields: [dashboardId], references: [id])
  dashboardId   String?
}

